{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "*": ["types/*"]
    },
    "outDir": "./dist",
    "noImplicitAny": false,
    "target": "es5",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2017"],
    "types": ["@types/node"],
    "esModuleInterop": true,
    "moduleResolution": "node",
  },
  "include": ["./src/**/*"],
  "exclude": ["**/node_modules", "**/__tests__/*"]
}
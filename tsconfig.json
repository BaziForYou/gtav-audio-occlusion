{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "*": ["types/*"],
      "@/*": ["*"]
    },
    "outDir": "./dist",
    "noImplicitAny": true,
    "target": "es6",
    "allowJs": true,
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "types": ["@types/node"],
    "module": "commonjs",
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["**/node_modules", "**/__tests__/*"]
}
